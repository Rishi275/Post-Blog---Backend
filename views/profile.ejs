<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Your Thoughts</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-black text-white min-h-screen">
    <div class="main container mx-auto p-4">
        <!-- Navbar -->
        <div class="nav flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold">Thoughts Hub</h1>
            <a href="/logout"
                class="bg-blue-700 hover:bg-blue-600 text-white py-2 px-4 rounded transition">Logout</a>
        </div>

        <!-- Post Thoughts Section -->
        <section>
            <h2 class="text-xl font-semibold mb-4">Post Your Thoughts</h2>
            <div>
                <form action="/post" method="post" class="bg-blue-800 p-4 rounded shadow-md">
                    <input type="text" name="content"  
                        class="w-full  resize-none p-2 mb-4  bg-gray-950 text-white  rounded " 
                        placeholder="Share your thoughts..."></input>
                    <input type="submit" value="Post" 
                        class="bg-gray-700 hover:bg-blue-600 text-white py-2 px-4 rounded transition cursor-pointer">
                </form>
            </div>
        </section>

        <!-- Recent Posts Section -->
        <section class="mt-8">
            <h2 class="text-xl font-semibold mb-4">Recent Posts</h2>
            <div class="posts space-y-4">
              <% if (user.posts && user.posts.length > 0) { %>
                <% user.posts.reverse().forEach((item) => { %>
                  <div class="post bg-gray-800 p-4 rounded shadow-md">
                    <h3 class="text-xl font-semibold mb-2"><%= item.content %></h3>
                    <p class="text-gray-400"><%= new Date(item.createdAt).toLocaleString() %></p>
                  </div>
                <% }) %>
              <% } else { %>
                <p class="text-gray-400">No posts yet. Start sharing your thoughts!</p>
              <% } %>
            </div>
          </section>
          
        
        
    </div>
</body>

</html>
